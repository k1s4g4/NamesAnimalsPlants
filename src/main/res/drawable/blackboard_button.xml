<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item  android:state_selected="true">
        <shape>
            <solid android:color="@color/transp_black30">

            </solid>

            <stroke
                android:color="#264d00"
                android:width="2dp">


            </stroke>
            <corners android:radius="10dp">

            </corners>
            <padding
                android:bottom="3dp"
                android:top="3dp"
                android:right="12dp"
                android:left="12dp">

            </padding>
        </shape>

    </item>
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/transp_black70">

            </solid>

            <stroke
                android:color="#264d00"
                android:width="4dp">


            </stroke>
            <corners android:radius="40dp">

            </corners>
            <padding
                android:bottom="3dp"
                android:top="3dp"
                android:right="12dp"
                android:left="12dp">

            </padding>
        </shape>
    </item>
    <item >
        <shape>
            <solid android:color="@color/transp_black30">

            </solid>

            <stroke
                android:color="#264d00"
                android:width="2dp">


            </stroke>
            <corners android:radius="40dp">

            </corners>
            <padding
                android:bottom="3dp"
                android:top="3dp"
                android:right="12dp"
                android:left="12dp">

            </padding>
        </shape>
    </item>

</selector>