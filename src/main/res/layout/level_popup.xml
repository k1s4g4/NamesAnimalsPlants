<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:background="@drawable/blackboardhorizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transp_black20"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">
            <TextView
                android:id="@+id/nameViewLevel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="35sp"
                android:background="@color/transp_black20"
                android:gravity="bottom|center"
                android:textColor="@color/chalkColor"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/tag_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="20sp"
                android:paddingLeft="10dp"
                android:paddingBottom="5dp"
                android:gravity="bottom|center"
                android:textColor="@color/chalkColor"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">
            <TextView
                android:id="@+id/level_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/chalkColor"
                android:layout_weight="1"
                android:textSize="40sp"
                android:gravity="bottom|end"
                android:textAlignment="gravity"
                android:text="aa" />
            <TextView
                android:id="@+id/lvl_tag"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/chalkColor"
                android:layout_weight="1"
                android:textSize="20sp"
                android:paddingBottom="7dp"
                android:gravity="bottom|start"
                android:textAlignment="gravity"
                android:text="lvl"/>
            <TextView
                android:id="@+id/total_exp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/chalkColor"
                android:layout_weight="1"
                android:textSize="30sp"
                android:paddingBottom="4dp"
                android:gravity="bottom|end"
                android:textAlignment="gravity"
                android:text="aa"/>
            <TextView
                android:id="@+id/exp_tag"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/chalkColor"
                android:layout_weight="1"
                android:textSize="20sp"
                android:paddingBottom="7dp"
                android:gravity="bottom|start"
                android:textAlignment="gravity"
                android:text="exp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">

            <ProgressBar

                style="@android:style/Widget.ProgressBar.Horizontal"
                android:id="@+id/progress"
                android:layout_centerInParent="true"
                android:max="100"
                android:layout_marginRight="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="40dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:progressDrawable="@drawable/progress_drawable"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/bound0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/chalkColor"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textAlignment="center" />


        </LinearLayout>
    </LinearLayout>


    <!--

    style="@android:style/Widget.ProgressBar.Horizontal"
    style="?android:attr/progressBarStyleHorizontal"


        -->

</RelativeLayout>